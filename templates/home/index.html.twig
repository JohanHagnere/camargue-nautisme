{% extends 'base.html.twig' %} {% block extra_stylesheets %}
<link rel="stylesheet" href="{{ asset('css/_home.css') }}" />
{% endblock %} {% block title %}Camargue-Nautisme{% endblock %} {% block body %}
{#
<section class="hero-section home">
  <div class="hero-video-container">
    <video autoplay muted loop class="hero-video">
      <source src="{{ asset('images/hero_kayak.webm') }}" type="video/webm" />
    </video>
    <div class="hero-text">
      <p>Pagayez vers de nouvelles aventures avec Camargue-Naustime</p>
      <h1>Réservez</h1>
    </div>
  </div>
</section>
